<div class="register">
  <div class="form">
    <h2>Registrieren</h2>

    <form action="/register" method="POST" class="login-form">
      <label for="username">Benutzername:</label>
      <input
        id="username"
        name="username"
        type="text"
        placeholder="Benutzername"
        required
      /><br />

      <label for="password">Passwort:</label>
      <input
        id="password"
        name="password"
        type="password"
        placeholder="Passwort"
        required
      /><br />

      <input type="submit" value="Registrieren" class="submit-btn" />
      <p>
        Bereits ein Konto?
        <a href="/login" class="register-btn"> Anmelden</a></p>

    </form>

  </div>
</div>