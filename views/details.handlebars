{{#posts}}



<img src="/uploads/{{image}}" alt="{{title}}" />
  <div class="post-details">
  <!-- Zurück-Pfeil -->
  <a href="/" class="back-arrow">←</a>

  <!-- Titel -->
  <h1 class="post-title">{{title}}</h1>

  <!-- Steckbrief (Kategorie, Preis, Ort, Anzahl Personen) -->
  <div class="post-info">
    <h3>Kategorie: {{activitycategory}}</h3>
    <hr class="divider">
    <h3>Preis: {{price}}</h3>
    <hr class="divider">
    <h3>Ort: {{place}}</h3>
    <hr class="divider">
    <h3>Anzahl Personen: {{numberofpeople}}</h3>
    <hr class="divider">
  </div>

  <!-- Feine Linie -->
  

  <!-- Beitragstext -->
  <p class="post-description">{{description}}</p>

  <form action="/like/{{id}}" enctype="multipart/form-data" method="POST">
    <input type="image" src="/like.png">
  </form>

  <form action="/comment/{{id}}" enctype="multipart/form-data" method="POST">
    <input type="text" >
  </form>

{{/posts}}

<p>{{likes.count}} Likes</p>

  <!-- Kommentare Abschnitt -->
  <div class="comments-section">
    <h2>Kommentare</h2>
    {{#comments}}
      <div class="comment">
        <p class="username"><i>{{username}}</i></p>
        <p class="comment-text">{{text}}</p>
      </div>
    {{/comments}}

    <!-- Kommentieren Abschnitt -->
    <div class="add-comment">
      <button class="comment-button">+</button>
      <span class="comment-text">Kommentieren</span>
    </div>


    

  </div>
</div>
