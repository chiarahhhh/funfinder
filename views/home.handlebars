<div class="landingpage">
  <h1 class="title"> Funfinder</h1>
  <h2 class="claim">Dein Weg zu unvergesslichen Erlebnissen!</h2>
</div>

<form id="searchForm">
  <input type="text" id="search" name="search" placeholder="Suchen" required />

</form>

{{#posts}}
  <hr />
  <a href="/activity/{{id}}">
    <div class="activityposts">
      <img src="{{image}}" alt="" />
      <h3>{{activitycategory}}</h3>
      <h1>{{title}}</h1>
      <div class="infos">
        <h3>Ort: {{place}} </h3>
        <h3>Preis: {{price}} </h3>
        <h3>Anzahl Personen: {{numberofpeople}}</h3>
      </div>
    </div>
  </a>

{{/posts}}